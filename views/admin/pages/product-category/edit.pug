extends ../../layouts/default.pug 
include ../../mixins/notification-error.pug
include ../../mixins/notification-success.pug
include ../../mixins/tree-level-category.pug

block main 
    +notification-error(messages.error)
    +notification-success(messages.success)
 
    h1 Chỉnh sửa danh mục
    form(
        action=`/admin/products-category/edit/${productCategory.id}?_method=PATCH`
        method="POST"
        id="form-edit-product-category"
        enctype="multipart/form-data" 
    )

        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text" 
                class="form-control"
                id="title"
                name="title"
                placeholder="Tên danh mục..."
                value=productCategory.title
                required
            )

        div(class="form-group")
            label(for="parentId") Danh mục cha
            select(
                class="form-control"
                id="parentId"
                name="parentId"
            )
                option(
                    value=""
                ) --Chọn danh mục cha --
                +tree-level-category(parentsCategory, 1)    


        div(class="form-group")
            label(for="description") Mô tả
            textarea(
                class="form-control"
                id="description"
                name="description"
                placeholder="Mô tả..."
                rows="5"
            ) #{productCategory.description}

        div(class="form-group")
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                placeholder="image.jpg"
                accept="image/*"
            )
            div(class="preview")
                img(
                    id="preview-image"
                    class="img-thumbnail"
                    src=productCategory.thumbnail
                    width="150px"
                )
                a(class="btn btn-danger btn-sm" deleted) x

        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                min="0"
                placeholder="Tự động tăng"
                value=productCategory.position
            )

        div(class="form-check form-check-inline")
                input(
                    class="form-check-input" 
                    type="radio" 
                    name="status" 
                    id="active" 
                    value="active"
                    checked = (productCategory.status == 'active' ? true : false)
                ) 
                label(for="active" 
                class="form-check-label"
                ) Hoạt động
        div(class="form-check form-check-inline")
                input(
                    class="form-check-input" 
                    type="radio" 
                    name="status" 
                    id="inactive" 
                    value="inactive"
                    checked = (productCategory.status == 'inactive' ? true : false)
                ) 
                label(for="inactive" 
                class="form-check-label"
                ) Dừng hoạt động
        br
        button(type="submit" class="btn btn-primary") Cập nhật