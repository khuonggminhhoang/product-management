extends ../../layouts/default.pug
include ../../mixins/notification-success.pug
include ../../mixins/notification-error.pug

block main 
    h1(class="mb-4") Thêm tài khoản
    +notification-success(messages.success)
    +notification-error(messages.error)

    form(
        action="/admin/accounts/create"
        method="POST"
        enctype="multipart/form-data" 
    )
        div(class='form-group')
            label(for='full-name') Họ tên *
            input(
                id='full-name'
                class='form-control' 
                type='text'
                name='fullName'
                placeholder='Họ và tên...'  
                required  
            )

        div(class='form-group')
            label(for='email') Email *
            input(
                id='email'
                class='form-control' 
                type='email'
                name='email'
                placeholder='mail@gmail.com...'    
                required
            )

        div(class='form-group')
            label(for='phone') Điện thoại *
            input(
                id='phone'
                class='form-control' 
                type='text'
                name='phone'
                placeholder='(+84) 023 ...'  
                required  
            )
            
        div(class='form-group')
            label(for='password') Mật khẩu *
            input(
                id='password'
                class='form-control' 
                type='password'
                name='password'
                placeholder='**********'    
                required
            )

        div(class="form-group")
            label(for="thumbnail") Avatar
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="avatar"
                placeholder="image.jpg"
                accept="image/*"
            )
            div(class="preview")
                img(
                    id="preview-image"
                    class="img-thumbnail"
                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTxKjw7UKMErGf4sBC7uz44m65E6QemoO7Tbw&s"
                    width="150px"
                )
                a(class="btn btn-danger btn-sm" deleted) x

        div(class="form-group")
            label(for="role-id") Nhóm quyền 
            select(
                id="role-id"
                class="form-control"
                name="roleId"
                required
            )
                option(selected disabled) -- Chọn --     
                each record in records 
                    option(value=record.id) #{record.title}
                

        div(class="form-check form-check-inline")
                input(
                    class="form-check-input" 
                    type="radio" 
                    name="status" 
                    id="active" 
                    value="active"
                    checked
                ) 
                label(for="active" 
                class="form-check-label"
                ) Hoạt động
        div(class="form-check form-check-inline")
                input(
                    class="form-check-input" 
                    type="radio" 
                    name="status" 
                    id="inactive" 
                    value="inactive"
                ) 
                label(for="inactive" 
                class="form-check-label"
                ) Dừng hoạt động
        br
        button(type="submit" class="btn btn-primary") Tạo mới

        
