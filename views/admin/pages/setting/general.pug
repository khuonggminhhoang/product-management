                                span(class="input-group-text") <i class="fa-solid fa-copyright"></i>
                            input(class='form-control' id='copyright' name='copyright' value= settingGeneral? settingGeneral.copyright : '')
                    
                .col-2
                .col-6
                    div.mb-3.d-inline-block
