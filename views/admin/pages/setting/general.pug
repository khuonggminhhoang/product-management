extends ./../../layouts/default.pug
include ./../../mixins/notification-success.pug
include ./../../mixins/notification-error.pug

block main 
    h1(class="mb-4") Cài đặt chung

    //- notification
    +notification-success(messages.success)
    +notification-error(messages.error)
    .row    
        .col-10
        .col-2.text-center
            button(type='button' class='btn btn-primary mb-3' update) Cập nhật
    .card.mb-3.main-info
        .card-header.bg-transparent 
            h5 Thông tin chính
        .card-body 
            .row 
                .col-4 
                    div
                        label(class='text-muted' for='website-name') Tên website
                        .input-group.input-group-sm.mb-3
                            div(class="input-group-prepend")
                                span(class="input-group-text") <i class="fa-solid fa-earth-asia"></i>
                            input(class='form-control' id='website-name' name='websiteName' value= settingGeneral? settingGeneral.websiteName : '')

                    div
                        label(class='text-muted' for='company-name') Tên công ty
                        .input-group.input-group-sm.mb-3
                            div(class="input-group-prepend")
                                span(class="input-group-text") <i class="fa-solid fa-city"></i>
                            input(class='form-control' id='company-name' name='companyName' value= settingGeneral? settingGeneral.companyName : '')
                    div
                        label(class='text-muted' for='hotline') Hotline
                        .input-group.input-group-sm.mb-3
                            div(class="input-group-prepend")
                                span(class="input-group-text") <i class="fa-solid fa-headphones-simple"></i>
                            input(class='form-control' id='hotline' name='hotline' value= settingGeneral? settingGeneral.hotline : '')

                    div
                        label(class='text-muted' for='phone-number') Số điện thoại
                        .input-group.input-group-sm.mb-3
                            div(class="input-group-prepend")
                                span(class="input-group-text")  <i class="fa-solid fa-phone"></i>
                            input(class='form-control' id='phone-number' name='phoneNumber' value= settingGeneral? settingGeneral.phoneNumber : '')
                    
                    div
                        label(class='text-muted' for='email') Email
                        .input-group.input-group-sm.mb-3
                            div(class="input-group-prepend")
                                span(class="input-group-text") <i class="fa-solid fa-envelope"></i>
                            input(class='form-control' id='email' name='email' value= settingGeneral? settingGeneral.email : '')
                    
                    div
                        label(class='text-muted' for='map') Địa chỉ
                        .input-group.input-group-sm.mb-3
                            div(class="input-group-prepend")
                                span(class="input-group-text") <i class="fa-solid fa-location-dot"></i>
                            input(class='form-control' id='address' name='address' value= settingGeneral? settingGeneral.address : '')
                    
                    div
                        label(class='text-muted' for='map') Bản đồ (nhúng iframe)
                        .input-group.input-group-sm.mb-3
                            div(class="input-group-prepend")
                                span(class="input-group-text") <i class="fa-solid fa-map"></i>
                            input(class='form-control' id='map' name='map' value= settingGeneral? settingGeneral.map : '')
                    
                    div
                        label(class='text-muted' for='copyright') Copyright
                        .input-group.input-group-sm.mb-3
