extends ./../../layouts/default.pug
include ./../../mixins/filter-button.pug
include ./../../mixins/form-search.pug
include ./../../mixins/pagination.pug

block main 
    h1 Danh sách sản phẩm 

    //- Filter
    .card.bg-light.mb-3
        .card-header Bộ lọc và tìm kiếm
        .card-body
            .row 
                //- các button để lọc sản phẩm
                .col-6
                    +filter-button(filterStatus)

                //- form tìm kiếm
                .col-6
                    +form-search(productName)

    //- List products
    .card.bg-light.mb-3
        .card-header Danh sách
        .card-body
            table.table.table-sm
                thead
                    tr
                        th STT
                        th Hình ảnh 
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Hành Động
                tbody
                    //- for như js
                    -for(let i = 0; i < products.length; ++i)
                        tr
                            td #{i + 1}
                            td 
                                img(src=products[i].thumbnail
                                    alt="Sản phẩm 1"
                                    width="100px"
                                    style="aspect-ratio: 4/3"
                                )
                            td #{products[i].title}
                            td #{products[i].price}$
                            //- if else như js
                            td 
                                if(products[i].status == 'active')
                                    a(href='#',class="badge badge-success") Hoạt động
                                else
                                    a(href='#',class="badge badge-danger") Dừng hoạt động

                            td 
                                button(type="button" class="btn btn-warning btn-sm mr-1") Sửa
                                button(type="button" class="btn btn-danger btn-sm ") Xóa

    //- Pagination
    +pagination(pagination)
            


