extends ./../../layouts/default.pug
include ./../../mixins/form-search.pug
include ./../../mixins/notification-success.pug
include ./../../mixins/notification-error.pug

block main 
    h1(class="mb-4") Nhóm quyền

    //- notification
    +notification-success(messages.success)
    +notification-error(messages.error)

    .card.bg-light.mb-3
        .card-header 
            .row
                .col-8
                .col-4.text-center
                    a(
                        type="button" 
                        class=`btn btn-outline-success mr-1 alert-success`
                        href=`${prefixAdmin}/roles/create`
                        button-add
                    )  + Thêm mới
        .card-body
            table(class="table table-hover table-sm")
                if records.length > 0
                    thead
                        tr
                            th STT 
                            th Tiêu đề
                            th Mô tả ngắn
                            th Hành Động
                    tbody
                        each record, index in records
                            tr
                                td #{index + 1}
                                
                                td #{record.title}
                                
                                td #{record.description}
                                    
                                td 
                                    a(
                                        type="button" 
                                        href=`${prefixAdmin}/roles/detail/${record._id}`
                                        class="btn btn-info btn-sm mr-1"
                                    ) Chi tiết
                                    a(
                                        type="button" 
                                        href=`${prefixAdmin}/roles/edit/${record._id}`
                                        class="btn btn-warning btn-sm mr-1"
                                    ) Sửa
                                    a(
                                        type="button" 
                                        class="btn btn-danger btn-sm"
                                        data-id=record._id 
                                        button-delete-product
                                    ) Xóa
                else 
                    a(href=`${prefixAdmin}/roles/create` class='text-center text-danger') Chưa có quyền nào được tạo, vui ong thêm quyền.

    form(
        id='form-delete-product'
        method='POST'
        action=""
        path=`${prefixAdmin}/roles/delete`
    )

    script(type='text/javascript' src="/admin/js/product.js")