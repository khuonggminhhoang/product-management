mixin form-change-multi()
    form(
        id='form-change-multi'
        method="POST"
        action=`${prefixAdmin}/products/change-multi?_method=PATCH`
        class="btn-toolbar justify-content-between"
    )

        .input-group
            .input-group-prepend
                select(class="custom-select" name="status")
                    option(disabled selected ) --- Chọn trạng thái ---
                    option(value="active") Hoạt động                            
                    option(value="inactive") Dừng hoạt động                            
                    option(value="delete-all") Xóa tất cả                            

                input(type="text" class="form-control d-none" name="ids" placeholder="id sản phẩm")

            .input-group-append
                button(
                    type="submit" 
                    class=`btn btn-primary`
                ) Áp dụng
        
        button(
                type="button" 
                class=`btn btn-outline-danger mr-1 alert-danger`
                button-deleted
            )  
