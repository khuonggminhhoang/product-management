include ../mixins/sub-menu.pug
include ../mixins/form-search.pug

header.header 
    .container 
        .row.align-item-center.pt-2 
            .col-2.pr-5
                .inner-logo 
                    a(href='/')
                        img(src=settingGeneral.logo alt='logo' height='auto' width='100%')

            .col-4
                .inner-menu 
                    ul 
                        li 
                            a(href='/') Trang chủ

                        li(class='sub-menu')
                            - const pathProduct = '/products'
                            a(href=pathProduct) Sản phẩm 
                                +sub-menu(layoutProductCategory, pathProduct)

                        li(class='sub-menu')
                            - const pathArticle = '/articles'
                            a(href=pathArticle) Tin tức 
                                +sub-menu(layoutArticleCategory, pathArticle)
                                
                        //- layoutProductCategory
                        //- layoutArticleCategory
                        //- đều lấy từ middleware chứ không phải từ controller trả về

            .col-3
                +form-search()

            .col-3 
                .inner-menu
                    ul 
                        li.mr-0 
                            a(href='/cart' class='mini-cart') 
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-cart4" viewBox="0 0 16 16">
                                    <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"/>
                                </svg>
                                span(class='badge badge-info') #{miniCart ? miniCart.total : 0}
                        
                        if (!user)
                            li
                                a(href='/user/login' class='btn btn-outline-dark btn-sm' style='border-radius:40px; background-color: inherit;color: inherit;') 
                                    i(class="fa-solid fa-circle-user mr-2") 
                                    span(style='font-weight:400; text-transform: capitalize') Đăng nhập
                        else    
                            li 
                                a(href='/chat') 
                                    i(class="fa-regular fa-comment-dots")

                            li(class='multi-menu mt-1')  
                                a(href='/user/info' class='btn btn-outline-dark btn-sm' style='border-radius:40px; background-color: inherit;color: inherit;') 
                                    image(src=user.avatar class='mini-avatar border') 
                                    span(style='font-weight:400; text-transform: capitalize') #{user.fullName}

                                .inner-menu
                                    a(href='/user/logout')
                                        <i class="fa-solid fa-right-from-bracket mr-2"></i>
                                        span(style='font-weight:400; text-transform: capitalize') Đăng xuất
                                    hr.m-0 
                                    
                                        