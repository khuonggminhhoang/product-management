extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/layout-grid.pug

block main 
    .container.my-5 
        .row 
            .col-12
                +box-head(`Bạn đang tìm kiếm: ${keyword}`)

        if (products.length > 0)
            +layout-grid(products)
        else 
            div(class='text-center text-body') Không có sản phẩm bạn cần tìm  
            div(class='text-center text-black-50') Hãy thử sử dụng các từ khóa chung chung hơn  

