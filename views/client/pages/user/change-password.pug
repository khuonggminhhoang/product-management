extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/notification-error.pug

block main 
    +notification-error(messages.error)

    .container.my-5 
        .row.justify-content-center
            .col-6
                h2(class='text-center') Quên mật khẩu
                form(
                    action=`/user/password/change`
                    method='POST'
                )
                    div(class="form-group")
                        label(for="email") Email <span class='text text-danger'>*</span>
                        input(
                            type="email" 
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder='mail@example.com'
                            required
                        )

                    div(class="form-group")
                        label(for="old-password") Mật khẩu cũ <span class='text text-danger'>*</span>
                        input(
                            type="password" 
                            class="form-control"
                            id="old-password"
                            name="oldPassword"
                            placeholder='********'
                            required
                        )

                    div(class="form-group")
                        label(for="new-password") Mật khẩu mới <span class='text text-danger'>*</span>
                        input(
                            type="password" 
                            class="form-control"
                            id="new-password"
                            name="newPassword"
                            placeholder='********'
                            required
                        )

                    div(class="form-group")
                        label(for="confirm-password") Xác nhận mật khẩu <span class='text text-danger'>*</span>
                        input(
                            type="password" 
                            class="form-control"
                            id="confirm-password"
                            name="confirmPassword"
                            placeholder='********'
                            required
                        )

                    div(class="form-group")
                        button(type='submit' class='btn btn-info btn-block') Đổi mật khẩu
                    hr.my-4